    "autoprefixer": "^10.4.23",
    "copyfiles": "^2.4.1",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.6"
