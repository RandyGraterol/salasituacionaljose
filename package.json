  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "npm run build:css && tsc && npm run copy:assets",
    "build:css": "npx tailwindcss -i ./src/public/css/input.css -o ./src/public/css/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/public/css/input.css -o ./src/public/css/output.css --watch",
    "copy:assets": "copyfiles -u 1 \"src/public/**/*\" dist && copyfiles -u 1 \"src/views/**/*\" dist",
    "start": "node dist/app.js",
    "seed": "ts-node src/utils/seedDatabase.ts",
    "migrate": "ts-node src/utils/runMigrations.ts",
    "migrate:down": "ts-node src/utils/runMigrations.ts down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
