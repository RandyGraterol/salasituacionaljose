<!-- Back Button -->
<div class="mb-6">
  <a 
    href="/tareas/proceso?divisionId=<%= tarea.divisionId %>" 
    class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors duration-200"
  >
    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    <span class="font-medium">Volver a Tareas en Proceso</span>
  </a>
</div>

<!-- Alerts -->
<% if (typeof error !== 'undefined' && error) { %>
  <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start gap-3 animate-fade-in">
    <%- include('../partials/icon', { name: 'x-circle', class: 'h-5 w-5 flex-shrink-0 mt-0.5' }) %>
    <span>
      <% if (error === 'campos_vacios') { %>
        Por favor complete todos los campos
      <% } else if (error === 'municipio_duplicado') { %>
        Este municipio ya ha registrado entrega para esta tarea
      <% } else if (error === 'entrega_no_encontrada') { %>
        La entrega no fue encontrada
      <% } else { %>
        Error al procesar la solicitud
      <% } %>
    </span>
  </div>
<% } %>

<% if (typeof success !== 'undefined' && success) { %>
  <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start gap-3 animate-fade-in">
    <%- include('../partials/icon', { name: 'check-circle', class: 'h-5 w-5 flex-shrink-0 mt-0.5' }) %>
    <span>
      <% if (success === 'entrega_agregada') { %>
        Entrega registrada exitosamente
      <% } else if (success === 'entrega_eliminada') { %>
        Entrega eliminada exitosamente
      <% } %>
    </span>
  </div>
<% } %>

<!-- Task Info Card -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= tarea.nombre %></h1>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="flex items-start gap-3">
      <%- include('../partials/icon', { name: 'building-office', class: 'h-5 w-5 text-gray-400 mt-0.5' }) %>
      <div>
        <p class="text-sm text-gray-500">Divisi칩n</p>
        <p class="font-medium text-gray-900"><%= tarea.division.nombre %></p>
      </div>
    </div>
    
    <div class="flex items-start gap-3">
      <%- include('../partials/icon', { name: 'calendar', class: 'h-5 w-5 text-gray-400 mt-0.5' }) %>
      <div>
        <p class="text-sm text-gray-500">Fecha de Inicio</p>
        <p class="font-medium text-gray-900"><%= new Date(tarea.fechaInicio).toLocaleDateString('es-ES', { day: '2-digit', month: 'short', year: 'numeric' }) %></p>
      </div>
    </div>
    
    <div class="flex items-start gap-3">
      <%- include('../partials/icon', { name: 'calendar', class: 'h-5 w-5 text-gray-400 mt-0.5' }) %>
      <div>
        <p class="text-sm text-gray-500">Fecha de Culminaci칩n</p>
        <p class="font-medium text-gray-900"><%= new Date(tarea.fechaCulminacion).toLocaleDateString('es-ES', { day: '2-digit', month: 'short', year: 'numeric' }) %></p>
      </div>
    </div>
    
    <div class="flex items-start gap-3">
      <%- include('../partials/icon', { name: 'check-circle', class: 'h-5 w-5 text-gray-400 mt-0.5' }) %>
      <div>
        <p class="text-sm text-gray-500">Estado</p>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= tarea.estado === 'en_proceso' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
          <%= tarea.estado === 'en_proceso' ? 'En Proceso' : 'Finalizada' %>
        </span>
      </div>
    </div>
  </div>
</div>

<!-- Add Delivery Form -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
    <%- include('../partials/icon', { name: 'plus', class: 'h-6 w-6 text-blue-600' }) %>
    <span>Agregar Entrega de Municipio</span>
  </h2>
  
  <form action="/tareas/agregar-entrega" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="tareaId" value="<%= tarea.id %>">
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <label for="municipioId" class="block text-sm font-medium text-gray-700 mb-2">
          Municipio <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%- include('../partials/icon', { name: 'map-pin', class: 'h-5 w-5 text-gray-400' }) %>
          </div>
          <select 
            id="municipioId" 
            name="municipioId" 
            class="pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 appearance-none bg-white" 
            required
          >
            <option value="">Seleccione un municipio</option>
            <% municipios.forEach(municipio => { %>
              <option value="<%= municipio.id %>"><%= municipio.nombre %></option>
            <% }); %>
          </select>
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </div>
      </div>
      
      <div>
        <label for="fechaHoraEntrega" class="block text-sm font-medium text-gray-700 mb-2">
          Fecha y Hora de Entrega <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%- include('../partials/icon', { name: 'clock', class: 'h-5 w-5 text-gray-400' }) %>
          </div>
          <input 
            type="datetime-local" 
            id="fechaHoraEntrega" 
            name="fechaHoraEntrega" 
            class="pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" 
            required
          >
        </div>
      </div>
    </div>
    
    <div class="mb-4">
      <label for="archivo" class="block text-sm font-medium text-gray-700 mb-2">
        Archivo (opcional)
      </label>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <%- include('../partials/icon', { name: 'document', class: 'h-5 w-5 text-gray-400' }) %>
        </div>
        <input 
          type="file" 
          id="archivo" 
          name="archivo" 
          accept=".doc,.docx,.xls,.xlsx,.ppt,.pptx,.pdf"
          class="pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
        >
      </div>
      <p class="mt-2 text-xs text-gray-500">
        Formatos permitidos: WORD (.doc, .docx), EXCEL (.xls, .xlsx), POWERPOINT (.ppt, .pptx), PDF (.pdf) - Tama침o m치ximo: 10MB
      </p>
    </div>
    
    <button 
      type="submit" 
      class="inline-flex items-center gap-2 px-6 py-3 bg-green-600 text-white rounded-lg font-semibold hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors duration-200"
    >
      <%- include('../partials/icon', { name: 'plus', class: 'h-5 w-5' }) %>
      <span>a침adir asignaci칩n</span>
    </button>
  </form>
</div>

<!-- Deliveries Table -->
<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-blue-700 border-b border-blue-700">
    <h2 class="text-xl font-semibold text-white flex items-center gap-2">
      <%- include('../partials/icon', { name: 'clipboard-document-list', class: 'h-6 w-6' }) %>
      <span>Municipios que han Entregado</span>
    </h2>
  </div>
  
  <% if (!tarea.entregas || tarea.entregas.length === 0) { %>
    <div class="p-8 text-center">
      <div class="flex justify-center mb-4">
        <%- include('../partials/icon', { name: 'information-circle', class: 'h-12 w-12 text-gray-400' }) %>
      </div>
      <p class="text-gray-600">A칰n no hay entregas registradas para esta tarea.</p>
    </div>
  <% } else { %>
    <!-- Desktop Table -->
    <div class="hidden md:block overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Municipio
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Fecha y Hora de Entrega
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Archivo
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Acciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% tarea.entregas.forEach(entrega => { %>
            <tr class="hover:bg-gray-50 transition-colors duration-150 <%= entrega.municipioId === municipioMasRapidoId ? 'bg-yellow-50' : '' %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <% if (entrega.municipioId === municipioMasRapidoId) { %>
                    <%- include('../partials/icon', { name: 'trophy', class: 'h-6 w-6 trophy-gold flex-shrink-0' }) %>
                  <% } else { %>
                    <%- include('../partials/icon', { name: 'map-pin', class: 'h-5 w-5 text-gray-400 flex-shrink-0' }) %>
                  <% } %>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= entrega.municipio.nombre %></p>
                    <% if (entrega.municipioId === municipioMasRapidoId) { %>
                      <p class="text-xs text-yellow-700 font-semibold">游끥 Municipio m치s r치pido</p>
                    <% } %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= new Date(entrega.fechaHoraEntrega).toLocaleString('es-ES', {
                  year: 'numeric',
                  month: '2-digit',
                  day: '2-digit',
                  hour: '2-digit',
                  minute: '2-digit'
                }) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if (entrega.archivoUrl) { %>
                  <a 
                    href="<%= entrega.archivoUrl %>" 
                    target="_blank" 
                    class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 hover:underline transition-colors duration-200"
                  >
                    <%- include('../partials/icon', { name: 'document-text', class: 'h-4 w-4' }) %>
                    <span>Ver archivo</span>
                  </a>
                <% } else { %>
                  <span class="text-gray-400 text-xs">Sin archivo</span>
                <% } %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <form action="/tareas/entrega/eliminar/<%= entrega.id %>?tareaId=<%= tarea.id %>" method="POST" style="display: inline;" onsubmit="return confirmarEliminacion('쮼st치 seguro de eliminar esta entrega?')">
                  <button 
                    type="submit" 
                    class="inline-flex items-center gap-2 px-3 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200"
                  >
                    <%- include('../partials/icon', { name: 'trash', class: 'h-4 w-4' }) %>
                    <span>Eliminar</span>
                  </button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Mobile Cards -->
    <div class="md:hidden divide-y divide-gray-200">
      <% tarea.entregas.forEach(entrega => { %>
        <div class="p-6 <%= entrega.municipioId === municipioMasRapidoId ? 'bg-yellow-50' : '' %>">
          <div class="flex items-start gap-3 mb-3">
            <% if (entrega.municipioId === municipioMasRapidoId) { %>
              <%- include('../partials/icon', { name: 'trophy', class: 'h-8 w-8 trophy-gold flex-shrink-0' }) %>
            <% } else { %>
              <%- include('../partials/icon', { name: 'map-pin', class: 'h-6 w-6 text-gray-400 flex-shrink-0' }) %>
            <% } %>
            <div class="flex-1">
              <h3 class="text-base font-semibold text-gray-900"><%= entrega.municipio.nombre %></h3>
              <% if (entrega.municipioId === municipioMasRapidoId) { %>
                <p class="text-sm text-yellow-700 font-semibold">游끥 Municipio m치s r치pido</p>
              <% } %>
            </div>
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
            <%- include('../partials/icon', { name: 'clock', class: 'h-4 w-4 text-gray-400' }) %>
            <span>
              <%= new Date(entrega.fechaHoraEntrega).toLocaleString('es-ES', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </span>
          </div>
          <% if (entrega.archivoUrl) { %>
            <div class="mb-4">
              <a 
                href="<%= entrega.archivoUrl %>" 
                target="_blank" 
                class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 hover:underline transition-colors duration-200"
              >
                <%- include('../partials/icon', { name: 'document-text', class: 'h-5 w-5' }) %>
                <span>Ver archivo</span>
              </a>
            </div>
          <% } %>
          <form action="/tareas/entrega/eliminar/<%= entrega.id %>?tareaId=<%= tarea.id %>" method="POST" onsubmit="return confirmarEliminacion('쮼st치 seguro de eliminar esta entrega?')">
            <button 
              type="submit" 
              class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200 w-full justify-center"
            >
              <%- include('../partials/icon', { name: 'trash', class: 'h-4 w-4' }) %>
              <span>Eliminar</span>
            </button>
          </form>
        </div>
      <% }); %>
    </div>
    
    <!-- Summary -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600">
          <strong>Total de entregas:</strong> <%= tarea.entregas.length %> municipio<%= tarea.entregas.length !== 1 ? 's' : '' %>
        </span>
        <span class="text-gray-600 flex items-center gap-2">
          <%- include('../partials/icon', { name: 'trophy', class: 'h-4 w-4 trophy-gold' }) %>
          <span>= Municipio m치s r치pido en entregar</span>
        </span>
      </div>
    </div>
  <% } %>
</div>
