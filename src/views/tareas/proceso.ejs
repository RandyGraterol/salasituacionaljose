<!-- Page Header -->
<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-2">Tareas en Proceso</h1>
  <p class="text-gray-600">Seleccione una divisi√≥n para ver sus tareas activas</p>
</div>

<!-- Alerts -->
<% if (typeof error !== 'undefined' && error) { %>
  <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start gap-3 animate-fade-in">
    <%- include('../partials/icon', { name: 'x-circle', class: 'h-5 w-5 flex-shrink-0 mt-0.5' }) %>
    <span>
      <% if (error === 'tarea_no_encontrada') { %>
        La tarea no fue encontrada
      <% } else if (error === 'tarea_ya_finalizada') { %>
        Esta tarea ya est√° finalizada
      <% } else if (error === 'error_servidor') { %>
        Error al procesar la solicitud
      <% } else { %>
        <%= error %>
      <% } %>
    </span>
  </div>
<% } %>

<% if (typeof success !== 'undefined' && success) { %>
  <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start gap-3 animate-fade-in">
    <%- include('../partials/icon', { name: 'check-circle', class: 'h-5 w-5 flex-shrink-0 mt-0.5' }) %>
    <span>
      <% if (success === 'tarea_finalizada') { %>
        Tarea finalizada exitosamente
      <% } else if (success === 'tarea_eliminada') { %>
        Tarea eliminada exitosamente
      <% } else { %>
        <%= success %>
      <% } %>
    </span>
  </div>
<% } %>

<!-- Divisiones Grid -->
<div class="mb-8">
  <h2 class="text-xl font-semibold text-gray-900 mb-4">Divisiones con Tareas Activas</h2>
  
  <% if (divisiones.length === 0) { %>
    <div class="bg-blue-50 border border-blue-200 text-blue-800 px-6 py-8 rounded-lg text-center">
      <div class="flex justify-center mb-4">
        <%- include('../partials/icon', { name: 'information-circle', class: 'h-12 w-12 text-blue-600' }) %>
      </div>
      <p class="text-lg mb-4">No hay tareas en proceso actualmente.</p>
      <a 
        href="/tareas/crear" 
        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-200"
      >
        <%- include('../partials/icon', { name: 'plus', class: 'h-5 w-5' }) %>
        <span>Crear Nueva Tarea</span>
      </a>
    </div>
  <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% divisiones.forEach(division => { %>
        <a 
          href="/tareas/proceso?divisionId=<%= division.id %>" 
          class="group bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-all duration-200 <%= divisionId == division.id ? 'ring-2 ring-blue-500 bg-blue-50' : '' %>"
        >
          <div class="flex items-start justify-between mb-4">
            <div class="flex-shrink-0">
              <%- include('../partials/icon', { name: 'building-office', class: 'h-10 w-10 text-blue-600' }) %>
            </div>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <%= division.tareas.length %>
            </span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
            <%= division.nombre %>
          </h3>
          <p class="text-sm text-gray-600">
            <%= division.tareas.length %> tarea<%= division.tareas.length !== 1 ? 's' : '' %> activa<%= division.tareas.length !== 1 ? 's' : '' %>
          </p>
        </a>
      <% }); %>
    </div>
  <% } %>
</div>

<!-- Tareas de la Divisi√≥n Seleccionada -->
<% if (divisionSeleccionada && tareas.length > 0) { %>
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-blue-700 border-b border-blue-700">
      <div class="flex items-center gap-3">
        <%- include('../partials/icon', { name: 'clipboard-document-list', class: 'h-6 w-6 text-white' }) %>
        <h2 class="text-xl font-semibold text-white">Tareas de <%= divisionSeleccionada.nombre %></h2>
      </div>
    </div>
    
    <!-- Desktop Table -->
    <div class="hidden md:block overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Nombre de la Tarea
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Fecha de Inicio
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Fecha y Hora de Culminaci√≥n
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Entregas
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Acciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% tareas.forEach(tarea => { %>
            <tr class="hover:bg-gray-50 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <%- include('../partials/icon', { name: 'document-text', class: 'h-5 w-5 text-gray-400 mr-3' }) %>
                  <span class="text-sm font-medium text-gray-900"><%= tarea.nombre %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= new Date(tarea.fechaInicio).toLocaleDateString('es-ES', { day: '2-digit', month: 'short', year: 'numeric' }) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <div class="flex flex-col">
                  <span class="font-medium text-gray-900">
                    <%= new Date(tarea.fechaCulminacion).toLocaleDateString('es-ES', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                  </span>
                  <span class="text-xs text-gray-500">
                    <%= new Date(tarea.fechaCulminacion).toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                  </span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <%= tarea.entregas ? tarea.entregas.length : 0 %> municipios
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <div class="flex items-center gap-2">
                  <a 
                    href="/tareas/detalle/<%= tarea.id %>" 
                    class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200"
                  >
                    <%- include('../partials/icon', { name: 'eye', class: 'h-4 w-4' }) %>
                    <span>Ver Detalle</span>
                  </a>
                  <form 
                    action="/tareas/finalizar/<%= tarea.id %>?divisionId=<%= divisionId %>" 
                    method="POST" 
                    style="display: inline;"
                    onsubmit="return confirmarFinalizacion('<%= tarea.nombre %>')"
                  >
                    <button 
                      type="submit" 
                      class="inline-flex items-center gap-2 px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors duration-200"
                      title="Finalizar tarea manualmente"
                    >
                      <%- include('../partials/icon', { name: 'check-circle', class: 'h-4 w-4' }) %>
                      <span>Finalizar</span>
                    </button>
                  </form>
                  <form 
                    action="/tareas/eliminar/<%= tarea.id %>?divisionId=<%= divisionId %>" 
                    method="POST" 
                    style="display: inline;"
                    onsubmit="return confirmarEliminacion('<%= tarea.nombre %>', <%= tarea.entregas ? tarea.entregas.length : 0 %>)"
                  >
                    <button 
                      type="submit" 
                      class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200"
                      title="Eliminar tarea permanentemente"
                    >
                      <%- include('../partials/icon', { name: 'trash', class: 'h-4 w-4' }) %>
                      <span>Eliminar</span>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Mobile Cards -->
    <div class="md:hidden divide-y divide-gray-200">
      <% tareas.forEach(tarea => { %>
        <div class="p-6 hover:bg-gray-50 transition-colors duration-150">
          <div class="flex items-start justify-between mb-3">
            <h3 class="text-base font-semibold text-gray-900 flex-1"><%= tarea.nombre %></h3>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-2">
              <%= tarea.entregas ? tarea.entregas.length : 0 %>
            </span>
          </div>
          <div class="space-y-2 text-sm text-gray-600 mb-4">
            <div class="flex items-center gap-2">
              <%- include('../partials/icon', { name: 'calendar', class: 'h-4 w-4 text-gray-400' }) %>
              <span>Inicio: <%= new Date(tarea.fechaInicio).toLocaleDateString('es-ES') %></span>
            </div>
            <div class="flex items-center gap-2">
              <%- include('../partials/icon', { name: 'calendar', class: 'h-4 w-4 text-gray-400' }) %>
              <div class="flex flex-col">
                <span class="font-medium text-gray-900">
                  Culminaci√≥n: <%= new Date(tarea.fechaCulminacion).toLocaleDateString('es-ES') %>
                </span>
                <span class="text-xs text-gray-500 ml-5">
                  <%= new Date(tarea.fechaCulminacion).toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                </span>
              </div>
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <a 
              href="/tareas/detalle/<%= tarea.id %>" 
              class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200 justify-center"
            >
              <%- include('../partials/icon', { name: 'eye', class: 'h-4 w-4' }) %>
              <span>Ver Detalle</span>
            </a>
            <form 
              action="/tareas/finalizar/<%= tarea.id %>?divisionId=<%= divisionId %>" 
              method="POST"
              onsubmit="return confirmarFinalizacion('<%= tarea.nombre %>')"
            >
              <button 
                type="submit" 
                class="w-full inline-flex items-center gap-2 px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors duration-200 justify-center"
              >
                <%- include('../partials/icon', { name: 'check-circle', class: 'h-4 w-4' }) %>
                <span>Finalizar Tarea</span>
              </button>
            </form>
            <form 
              action="/tareas/eliminar/<%= tarea.id %>?divisionId=<%= divisionId %>" 
              method="POST"
              onsubmit="return confirmarEliminacion('<%= tarea.nombre %>', <%= tarea.entregas ? tarea.entregas.length : 0 %>)"
            >
              <button 
                type="submit" 
                class="w-full inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200 justify-center"
              >
                <%- include('../partials/icon', { name: 'trash', class: 'h-4 w-4' }) %>
                <span>Eliminar Tarea</span>
              </button>
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  
  <script>
    function confirmarFinalizacion(nombreTarea) {
      // Capturar el evento y el formulario
      const currentEvent = event;
      const form = currentEvent.target.closest('form');
      
      if (window.modal) {
        // Usar modal personalizado
        window.modal.confirm({
          title: 'Finalizar Tarea',
          message: `
            <p class="mb-2">¬øEst√° seguro de finalizar la tarea <strong>"${nombreTarea}"</strong> antes de su fecha de culminaci√≥n?</p>
            <p class="text-sm text-gray-500">Esta acci√≥n no se puede deshacer y la tarea se mover√° a "Tareas Finalizadas".</p>
          `,
          confirmText: 'S√≠, Finalizar',
          cancelText: 'Cancelar',
          type: 'warning',
          onConfirm: function() {
            // Enviar el formulario
            if (form) {
              form.submit();
            }
          }
        });
        return false; // Prevenir env√≠o inmediato
      } else {
        // Fallback a confirm nativo
        return confirm('¬øEst√° seguro de finalizar la tarea "' + nombreTarea + '" antes de su fecha de culminaci√≥n?\n\nEsta acci√≥n no se puede deshacer y la tarea se mover√° a "Tareas Finalizadas".');
      }
    }
    
    function confirmarEliminacion(nombreTarea, cantidadEntregas) {
      // Capturar el evento y el formulario
      const currentEvent = event;
      const form = currentEvent.target.closest('form');
      
      if (window.modal) {
        // Construir mensaje
        let mensaje = `<p class="mb-3">¬øEst√° seguro de <strong class="text-red-600">ELIMINAR PERMANENTEMENTE</strong> la tarea <strong>"${nombreTarea}"</strong>?</p>`;
        
        if (cantidadEntregas > 0) {
          mensaje += `
            <div class="bg-red-50 border border-red-200 rounded-lg p-3 mb-3">
              <p class="text-sm font-semibold text-red-800 mb-2">üóëÔ∏è Esta acci√≥n eliminar√°:</p>
              <ul class="text-sm text-red-700 list-disc list-inside space-y-1">
                <li>La tarea completa</li>
                <li>${cantidadEntregas} entrega${cantidadEntregas > 1 ? 's' : ''} registrada${cantidadEntregas > 1 ? 's' : ''}</li>
              </ul>
            </div>
          `;
        }
        
        mensaje += `
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
            <p class="text-sm font-semibold text-yellow-800">‚ö†Ô∏è ADVERTENCIA</p>
            <p class="text-sm text-yellow-700">Esta acci√≥n NO se puede deshacer. La tarea y sus entregas se eliminar√°n permanentemente de la base de datos.</p>
          </div>
        `;
        
        // Mostrar modal
        window.modal.confirm({
          title: '‚ö†Ô∏è Eliminar Tarea',
          message: mensaje,
          confirmText: 'S√≠, Eliminar Permanentemente',
          cancelText: 'No, Cancelar',
          type: 'danger',
          onConfirm: function() {
            // Mostrar toast de procesando
            if (window.toast) {
              window.toast.info('Eliminando tarea...', 2000);
            }
            // Enviar el formulario
            if (form) {
              form.submit();
            }
          }
        });
        return false; // Prevenir env√≠o inmediato
      } else {
        // Fallback a confirm nativo
        let mensaje = '‚ö†Ô∏è ¬øEst√° seguro de ELIMINAR PERMANENTEMENTE la tarea "' + nombreTarea + '"?\n\n';
        
        if (cantidadEntregas > 0) {
          mensaje += 'üóëÔ∏è Esta acci√≥n eliminar√°:\n';
          mensaje += '- La tarea\n';
          mensaje += '- ' + cantidadEntregas + ' entrega' + (cantidadEntregas > 1 ? 's' : '') + ' registrada' + (cantidadEntregas > 1 ? 's' : '') + '\n\n';
        }
        
        mensaje += '‚ùå ESTA ACCI√ìN NO SE PUEDE DESHACER\n\n';
        mensaje += '¬øDesea continuar?';
        
        return confirm(mensaje);
      }
    }
    
    // Mostrar notificaciones toast autom√°ticamente si hay mensajes
    document.addEventListener('DOMContentLoaded', function() {
      <% if (typeof success !== 'undefined' && success) { %>
        if (window.toast) {
          <% if (success === 'tarea_finalizada') { %>
            window.toast.success('Tarea finalizada exitosamente');
          <% } else if (success === 'tarea_eliminada') { %>
            window.toast.success('Tarea eliminada exitosamente');
          <% } else { %>
            window.toast.success('<%= success %>');
          <% } %>
        }
      <% } %>
      
      <% if (typeof error !== 'undefined' && error) { %>
        if (window.toast) {
          <% if (error === 'tarea_no_encontrada') { %>
            window.toast.error('La tarea no fue encontrada');
          <% } else if (error === 'tarea_ya_finalizada') { %>
            window.toast.error('Esta tarea ya est√° finalizada');
          <% } else if (error === 'error_servidor') { %>
            window.toast.error('Error al procesar la solicitud');
          <% } else { %>
            window.toast.error('<%= error %>');
          <% } %>
        }
      <% } %>
    });
  </script>
<% } %>
