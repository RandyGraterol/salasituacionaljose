<%- include('../layout', { body: `
<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Evaluación Avanzada de Municipios</h1>
    
    <!-- Filtros -->
    <form method="GET" action="/evaluacion/avanzada" class="mb-6 bg-gray-50 p-4 rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Mes</label>
          <input 
            type="number" 
            name="mes" 
            min="1" 
            max="12" 
            value="${filtros.mes}"
            placeholder="1-12"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Año</label>
          <input 
            type="number" 
            name="anio" 
            min="2020" 
            max="2100" 
            value="${filtros.anio}"
            placeholder="2024"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">División</label>
          <select 
            name="divisionId"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="">Todas las divisiones</option>
            ${divisiones.map(d => `
              <option value="${d.id}" ${filtros.divisionId == d.id ? 'selected' : ''}>
                ${d.nombre}
              </option>
            `).join('')}
          </select>
        </div>
        
        <div class="flex items-end">
          <button 
            type="submit"
            class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors"
          >
            Filtrar
          </button>
        </div>
      </div>
    </form>

    <!-- Leyenda de métricas -->
    <div class="mb-6 bg-blue-50 p-4 rounded-lg">
      <h3 class="font-semibold text-blue-900 mb-2">Métricas de Evaluación:</h3>
      <ul class="text-sm text-blue-800 space-y-1">
        <li><strong>Cobertura:</strong> % de tareas con al menos una entrega</li>
        <li><strong>Puntualidad:</strong> Qué tan temprano entrega (0-100, donde 100 es entregar al inicio)</li>
        <li><strong>Calidad:</strong> Promedio de calificaciones recibidas (0-100)</li>
        <li><strong>Cantidad:</strong> Promedio de entregas por tarea</li>
        <li><strong>Puntuación Final:</strong> Combinación ponderada (40% cobertura, 30% puntualidad, 20% calidad, 10% cantidad)</li>
      </ul>
    </div>

    ${error ? `
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        ${error}
      </div>
    ` : ''}

    <!-- Tabla de evaluaciones -->
    ${evaluaciones.length > 0 ? `
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-300">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                Posición
              </th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                Municipio
              </th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-700 uppercase tracking-wider">
                Puntuación Final
              </th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-700 uppercase tracking-wider">
                Cobertura
              </th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-700 uppercase tracking-wider">
                Puntualidad
              </th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-700 uppercase tracking-wider">
                Calidad
              </th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-700 uppercase tracking-wider">
                Cantidad
              </th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-700 uppercase tracking-wider">
                Acciones
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            ${evaluaciones.map((e, index) => {
              const getColorClass = (valor) => {
                if (valor >= 80) return 'text-green-600 font-semibold';
                if (valor >= 60) return 'text-yellow-600 font-semibold';
                return 'text-red-600 font-semibold';
              };
              
              return `
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 text-center">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full ${
                      index === 0 ? 'bg-yellow-400 text-yellow-900' :
                      index === 1 ? 'bg-gray-300 text-gray-900' :
                      index === 2 ? 'bg-orange-400 text-orange-900' :
                      'bg-gray-100 text-gray-700'
                    } font-bold">
                      ${index + 1}
                    </span>
                  </td>
                  <td class="px-4 py-3 font-medium text-gray-900">
                    ${e.municipioNombre}
                  </td>
                  <td class="px-4 py-3 text-center ${getColorClass(e.puntuacionFinal)}">
                    ${e.puntuacionFinal.toFixed(2)}
                  </td>
                  <td class="px-4 py-3 text-center">
                    <div class="${getColorClass(e.porcentajeCobertura)}">
                      ${e.porcentajeCobertura.toFixed(2)}%
                    </div>
                    <div class="text-xs text-gray-500">
                      ${e.tareasCompletadas}/${e.totalTareas}
                    </div>
                  </td>
                  <td class="px-4 py-3 text-center">
                    <div class="${getColorClass(e.promedioPuntualidad)}">
                      ${e.promedioPuntualidad.toFixed(2)}
                    </div>
                    <div class="text-xs text-gray-500">
                      ${e.entregasPuntuales} a tiempo / ${e.entregasTardias} tarde
                    </div>
                  </td>
                  <td class="px-4 py-3 text-center">
                    <div class="${getColorClass(e.promedioCalidad)}">
                      ${e.promedioCalidad.toFixed(2)}
                    </div>
                    <div class="text-xs text-gray-500">
                      ${e.entregasCalificadas} calificadas
                    </div>
                  </td>
                  <td class="px-4 py-3 text-center text-gray-700">
                    ${e.promedioEntregasPorTarea.toFixed(2)}
                    <div class="text-xs text-gray-500">
                      ${e.totalEntregas} total
                    </div>
                  </td>
                  <td class="px-4 py-3 text-center">
                    <a 
                      href="/evaluacion/municipio/${e.municipioId}?mes=${filtros.mes}&anio=${filtros.anio}&divisionId=${filtros.divisionId}"
                      class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                    >
                      Ver Detalle
                    </a>
                  </td>
                </tr>
              `;
            }).join('')}
          </tbody>
        </table>
      </div>
      
      <!-- Enlaces adicionales -->
      <div class="mt-6 flex gap-4">
        <a 
          href="/evaluacion/ranking?metrica=final&mes=${filtros.mes}&anio=${filtros.anio}&divisionId=${filtros.divisionId}"
          class="bg-purple-600 text-white px-4 py-2 rounded-md hover:bg-purple-700 transition-colors"
        >
          Ver Ranking Detallado
        </a>
        <a 
          href="/evaluacion"
          class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors"
        >
          Volver a Evaluación Simple
        </a>
      </div>
    ` : `
      <div class="text-center py-8 text-gray-500">
        No hay datos de evaluación disponibles con los filtros seleccionados.
      </div>
    `}
  </div>
</div>
`}) %>
