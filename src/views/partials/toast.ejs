<!-- Toast Notification Container -->
<div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2 pointer-events-none">
  <!-- Toasts will be dynamically inserted here by JavaScript -->
</div>

<!-- Toast Templates (hidden, used by JS) -->
<template id="toast-success-template">
  <div class="toast bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-3 animate-slide-in pointer-events-auto max-w-md">
    <div class="flex-shrink-0">
      <%- include('icon', { name: 'check-circle', class: 'h-6 w-6' }) %>
    </div>
    <span class="flex-1 toast-message"></span>
    <button class="toast-close flex-shrink-0 hover:opacity-75 transition-opacity">
      <%- include('icon', { name: 'x-mark', class: 'h-5 w-5' }) %>
    </button>
  </div>
</template>

