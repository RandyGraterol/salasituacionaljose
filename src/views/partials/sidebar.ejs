      <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Gesti贸n</p>
    </div>
    
    <a href="/divisiones" class="nav-item flex items-center gap-3 px-4 py-3 text-white rounded-lg hover:bg-gray-600 transition-colors duration-200 <%= currentPage === 'divisiones' ? 'bg-gray-600 font-medium' : '' %>">
      <%- include('icon', { name: 'building-office', class: 'h-5 w-5' }) %>
      <span>Divisiones</span>
    </a>
    
    <a href="/municipios" class="nav-item flex items-center gap-3 px-4 py-3 text-white rounded-lg hover:bg-gray-600 transition-colors duration-200 <%= currentPage === 'municipios' ? 'bg-gray-600 font-medium' : '' %>">
      <%- include('icon', { name: 'map-pin', class: 'h-5 w-5' }) %>
