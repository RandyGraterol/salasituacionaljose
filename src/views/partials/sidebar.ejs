  </nav>
  
  <!-- Logout Button -->
  <div class="p-4 border-t border-gray-600">
    <a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-400 rounded-lg hover:bg-gray-600 transition-colors duration-200">
      <%- include('icon', { name: 'arrow-right-on-rectangle', class: 'h-5 w-5' }) %>
