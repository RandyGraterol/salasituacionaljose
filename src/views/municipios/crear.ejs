<div class="mb-6">
  <a href="/municipios" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 mb-4">
    <%- include('../partials/icon', { name: 'arrow-right-on-rectangle', class: 'h-5 w-5 transform rotate-180' }) %>
    Volver a Municipios
  </a>
  <h1 class="text-3xl font-bold text-gray-900 mb-2">Nuevo Municipio</h1>
  <p class="text-gray-600">Crea un nuevo municipio del Estado Gu√°rico</p>
</div>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start gap-3 mb-6">
    <%- include('../partials/icon', { name: 'x-circle', class: 'h-5 w-5 flex-shrink-0 mt-0.5' }) %>
    <span><%= error %></span>
  </div>
<% } %>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <form action="/municipios/crear" method="POST">
    <div class="mb-6">
      <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">
        Nombre del Municipio <span class="text-red-500">*</span>
      </label>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <%- include('../partials/icon', { name: 'map-pin', class: 'h-5 w-5 text-gray-400' }) %>
        </div>
        <input 
          type="text" 
          id="nombre" 
          name="nombre" 
          class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          placeholder="Ej: San Juan de los Morros"
          required
          autofocus
        >
      </div>
    </div>
    
    <div class="flex gap-3">
      <button type="submit" class="inline-flex items-center gap-2 px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium">
        <%- include('../partials/icon', { name: 'check', class: 'h-5 w-5' }) %>
        Crear Municipio
      </button>
      <a href="/municipios" class="inline-flex items-center gap-2 px-6 py-2.5 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200 font-medium">
        <%- include('../partials/icon', { name: 'x-mark', class: 'h-5 w-5' }) %>
        Cancelar
      </a>
    </div>
  </form>
</div>
