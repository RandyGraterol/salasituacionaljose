<!-- Page Header -->
<div class="mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Gestión de Divisiones</h1>
      <p class="text-gray-600">Administra las divisiones del CDCE</p>
    </div>
    <a href="/divisiones/crear" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
      <%- include('../partials/icon', { name: 'plus', class: 'h-5 w-5' }) %>
      Nueva División
    </a>
  </div>
</div>

<!-- Alerts -->
<% if (success) { %>
  <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start gap-3 mb-6">
    <%- include('../partials/icon', { name: 'check-circle', class: 'h-5 w-5 flex-shrink-0 mt-0.5' }) %>
    <span><%= success %></span>
  </div>
<% } %>

<% if (error) { %>
  <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start gap-3 mb-6">
    <%- include('../partials/icon', { name: 'x-circle', class: 'h-5 w-5 flex-shrink-0 mt-0.5' }) %>
    <span><%= error %></span>
  </div>
<% } %>

<!-- Divisiones Table -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <% if (divisiones.length === 0) { %>
    <div class="text-center py-12">
      <%- include('../partials/icon', { name: 'information-circle', class: 'h-12 w-12 text-gray-400 mx-auto mb-3' }) %>
      <p class="text-gray-600 mb-4">No hay divisiones registradas</p>
      <a href="/divisiones/crear" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
        <%- include('../partials/icon', { name: 'plus', class: 'h-5 w-5' }) %>
        Crear Primera División
      </a>
    </div>
  <% } else { %>
    <!-- Desktop Table -->
    <div class="hidden md:block overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gradient-to-r from-blue-50 to-blue-100">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Nombre</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% divisiones.forEach(division => { %>
            <tr class="hover:bg-gray-50 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">#<%= division.id %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-2">
                  <%- include('../partials/icon', { name: 'building-office', class: 'h-5 w-5 text-gray-400' }) %>
                  <span class="text-sm font-medium text-gray-900"><%= division.nombre %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end gap-2">
                  <a href="/divisiones/<%= division.id %>/editar" class="inline-flex items-center gap-1 px-3 py-1.5 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors duration-200">
                    <%- include('../partials/icon', { name: 'pencil', class: 'h-4 w-4' }) %>
                    Editar
                  </a>
                  <form action="/divisiones/<%= division.id %>/eliminar" method="POST" onsubmit="return confirm('¿Estás seguro de eliminar esta división?');" class="inline">
                    <button type="submit" class="inline-flex items-center gap-1 px-3 py-1.5 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors duration-200">
                      <%- include('../partials/icon', { name: 'trash', class: 'h-4 w-4' }) %>
                      Eliminar
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    
    <!-- Mobile Cards -->
    <div class="md:hidden space-y-4">
      <% divisiones.forEach(division => { %>
        <div class="border border-gray-200 rounded-lg p-4">
          <div class="flex items-center gap-2 mb-3">
            <%- include('../partials/icon', { name: 'building-office', class: 'h-5 w-5 text-gray-400' }) %>
            <h3 class="font-medium text-gray-900"><%= division.nombre %></h3>
          </div>
          <div class="flex gap-2">
            <a href="/divisiones/<%= division.id %>/editar" class="flex-1 inline-flex items-center justify-center gap-1 px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors duration-200">
              <%- include('../partials/icon', { name: 'pencil', class: 'h-4 w-4' }) %>
              Editar
            </a>
            <form action="/divisiones/<%= division.id %>/eliminar" method="POST" onsubmit="return confirm('¿Estás seguro?');" class="flex-1">
              <button type="submit" class="w-full inline-flex items-center justify-center gap-1 px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors duration-200">
                <%- include('../partials/icon', { name: 'trash', class: 'h-4 w-4' }) %>
                Eliminar
              </button>
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>
