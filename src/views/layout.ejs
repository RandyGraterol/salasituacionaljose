<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Sistema CDCE' %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <% if (user) { %>
    <!-- Layout with Sidebar for authenticated users -->
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar -->
      <%- include('partials/sidebar', { user: user, currentPage: currentPage || '' }) %>
      
      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col overflow-hidden lg:ml-64">
        <!-- Mobile Header with Hamburger -->
        <header class="lg:hidden bg-white shadow-sm z-30">
          <div class="flex items-center justify-between px-4 py-3">
            <button id="sidebar-toggle" class="text-gray-500 hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-lg p-2">
              <%- include('partials/icon', { name: 'bars-3', class: 'h-6 w-6' }) %>
            </button>
            <div class="flex items-center gap-2">
              <span class="text-lg font-semibold text-gray-900">CDCE</span>
            </div>
            <div class="w-10"></div> <!-- Spacer for centering -->
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <%- body %>
          </div>
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 py-4">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <p class="text-center text-sm text-gray-500">
              &copy; 2026 CDCE SALA Situacional Gu√°rico - Sistema de Registro de Tareas
            </p>
          </div>
        </footer>
      </div>
    </div>

    <!-- Toast Container -->
    <%- include('partials/toast') %>
  <% } else { %>
    <!-- Simple layout for non-authenticated pages -->
    <main>
      <%- body %>
    </main>
  <% } %>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script src="/js/sidebar.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/modal.js"></script>
</body>
</html>
